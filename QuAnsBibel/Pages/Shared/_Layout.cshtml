<!DOCTYPE html>
@{
    var Set = Model._FormSetup;
}

<html lang="fa">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuAnsBibel</title>

    <environment include="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <link href="~/icofont/icofont.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/icofont/icofont.min.css" rel="stylesheet" />
    </environment>

    <link href="~/css/site.css" rel="stylesheet" />

</head>
<body style="font-family: Shabnam; ">
    <div class="bg_form_Blue">
        <header class="fixed-top bg_form_Blue px-2">
            <div class="d-flex justify-content-between pt-3 pb-1">
                <div class="d-flex">
                    <label id="MenuBtn" title="منو" class="btn_Normal btn_Brown" onclick="MenuToggel();">
                        <i id="MenuIcon_Left" class="icofont-2x icofont-stylish-left dis-none"></i><i id="MenuIcon_Right" class="icofont-2x icofont-stylish-right"></i>
                    </label>
                </div>
                <div class="text-warning">
                    <h5>@Set.Title</h5>
                </div>
                <div class="">
                    <a class="font-16 btn_Normal btn_Brown" asp-area="" asp-page="/Home">
                        <label class="text-pointer" style="font-family: DastNevis;">پرسش و پاسخ کتاب مقدس</label>
                    </a>
                </div>
            </div>
        </header>
        <div class="bg_form_Blue pb-5">
            <div id="MenuArea" class="menu r_0 text-right bg_form_Blue">
                @if (@Set.Name == "Home")
                {
                    <a asp-page="/Home" class="mt-4 bg-info" onclick="MenuItemClick(this);"><span><i class="text-warning icofont-1x icofont-home mx-2"></i>خانه</span></a>
                }
                else
                {
                    <a asp-page="/Home" class="mt-4" onclick="MenuItemClick(this);"><span><i class="text-warning icofont-1x icofont-home mx-2"></i>خانه</span></a>
                }
                @if (@Set.Name == "Rabet_Sabet")
                {
                    <a asp-page="/Rabet_Sabet" class="bg-info" onclick="MenuItemClick(this);"><img src="~/images/EESA-A.jpg" width="25" height="25"> <span class="mx-2">جستجوی پاسخ</span></a>
                }
                else
                {
                    <a asp-page="/Rabet_Sabet" onclick="MenuItemClick(this);"><img src="~/images/EESA-A.jpg" width="25" height="25"> <span class="mx-2"> جستجوی پاسخ</span></a>
                }
                @if (@Set.Name == "Rabet_Sayar")
                {
                    <a asp-page="/Rabet_Sayar" class="bg-info" onclick="MenuItemClick(this);"><img src="~/images/EESA-B.jpg" width="25" height="25"> <span class="mx-2">نوشتن پرسش</span></a>
                }
                else
                {
                    <a asp-page="/Rabet_Sayar" onclick="MenuItemClick(this);"><img src="~/images/EESA-B.jpg" width="25" height="25"> <span class="mx-2">نوشتن پرسش</span></a>
                }
                @if (@Set.Name == "Mohafez_2500")
                {
                    <a asp-page="/Mohafez_2500" class="bg-info" onclick="MenuItemClick(this);"><img src="~/images/EESA-C.jpg" width="25" height="25"> <span class="mx-2">سرودهای پرستشی</span></a>
                }
                else
                {
                    <a asp-page="/Mohafez_2500" onclick="MenuItemClick(this);"><img src="~/images/EESA-C.jpg" width="25" height="25"> <span class="mx-2">سرودهای پرستشی</span></a>
                }
                @if (@Set.Name == "Mohafez_6000")
                {
                    <a asp-page="/Mohafez_6000" class="bg-info" onclick="MenuItemClick(this);"><img src="~/images/EESA-D.jpg" width="25" height="25"> <span class="mx-2">جلسات کلیسایی</span></a>
                }
                else
                {
                    <a asp-page="/Mohafez_6000" onclick="MenuItemClick(this);"><img src="~/images/EESA-D.jpg" width="25" height="25"> <span class="mx-2">جلسات کلیسایی</span></a>
                }
                @if (@Set.Name == "Sayer")
                {
                    <a asp-page="/Sayer" class="bg-info" onclick="MenuItemClick(this);"><img src="~/images/EESA-E.jpg" width="25" height="25"> <span class="mx-2">مرکز دانلود</span></a>
                }
                else
                {
                    <a asp-page="/Sayer" onclick="MenuItemClick(this);"><img src="~/images/EESA-E.jpg" width="25" height="25"> <span class="mx-2">مرکز دانلود</span></a>
                }
                @if (@Set.Name == "Contact-Us")
                {
                    <a asp-page="/Contact-Us" class="bg-info" onclick="MenuItemClick(this);">ارتباط با ما</a>
                }
                else
                {
                    <a asp-page="/Contact-Us" onclick="MenuItemClick(this);">ارتباط با ما</a>
                }
                @if (@Set.Name == "About-Us")
                {
                    <a asp-page="/About-Us" class="bg-info" onclick="MenuItemClick(this);">درباره ما</a>
                }
                else
                {
                    <a asp-page="/About-Us" onclick="MenuItemClick(this);">درباره ما</a>
                }

            </div>

            <div id="MainArea" class="rtl mainArea pr_170">
                <main id="MainAreaActive" class="p-2 mt-4 main">
                    @if (@Set.Header != "")
                    {
                        <div class="header-page w-max-1000 mx-auto spc-pre-wrap">@Set.Header</div>
                    }
                    @RenderBody()
                    @if (@Set.Footer != "")
                    {
                        <div class="footer-page w-max-1000 mx-auto spc-pre-wrap">@Set.Footer</div>
                    }
                    <div class="mt-3 pb-5" id="HelpArea"></div>
                </main>

            </div>
        </div>



        <footer class="fixed-bottom bg_form_Blue_footer py-2">

            <div class="container form-row justify-content-center">
                <label class="icofont-00x icofont-copyright"> <span>تمام حقوق سایت متعلق به گروه پرسش و پاسخ کتاب مقدس می باشد - 1400</span></label>
                <label>@DateTime.Now.Year - QuAnsBibel</label>
            </div>
        </footer>

        <div hidden>
            <input type="hidden" id="LocalValue" value="0" />

            <!-- راهنما -->
            <form method="get" data-ajax-method="get" data-ajax="true"
                  data-ajax-begin="SpinnerShow('HelpArea');"
                  data-ajax-url="?handler=HelpShow"
                  data-ajax-update="#HelpArea">
                <input hidden type="submit" id="HelpBtn" />
            </form>
        </div>
        <section>
            <!-- دکمه برگشت به بالا -->
            <button id="BtnGoToTop" title="برگشت به بالا" data-toggle="tooltip" class="float-left"><i class="icofont-2x icofont-stylish-up"></i></button>

            <!-- پنجره پیامها -->
            <div class="container">
                <input id="ShowMsg_Btn" type="button" class="d-none" data-toggle="modal" data-target="#myModal" value="" />
                <div class="modal fade" id="myModal">
                    <div class="modal-dialog center rtl">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h6 class="modal-title text-primary" id="ShowMsg_TITR">Heading</h6>
                            </div>
                            <div class="modal-body text-center p-3 text-brown" id="ShowMsg_MATN">
                                Msg body..
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-info font-14" data-dismiss="modal">OK</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- پنجره فرم پیامها -->
            <div class="container">
                <button id="MsgFrom_Btn" onclick="AreaDown('ModalForm');" hidden>فرم پیام روی صفحه</button>
                <div class="modal dis-none modal-dialog-scrollable pre-scrollable" id="ModalForm">
                    <div class="modal-lg mx-auto my-3">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h6 class="modal-title text-primary" id="MsgForm_TITR">Heading</h6>
                            </div>
                            <div class="modal-body col text-center" id="MsgForm_MATN">
                                Msg body..
                            </div>
                            <div class="modal-footer">
                                <label class="btn_Icon Icon_Blue" onclick="AreaUp('ModalForm');" title="بستن پنجره"><i class="icofont-2x icofont-swoosh-up"></i></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- پنجره انتظار -->
            <div class="container">
                <button id="Spinner_Btn" onclick="AreaDown('ModalSpiner');" hidden>فرم اسپینر روی صفحه</button>
                <div class="modal dis-none" id="ModalSpiner">
                    <div class="modal-dialog center rtl">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h6 class="modal-title text-primary" id="SpinnerMsg_TITR">Heading</h6>
                            </div>
                            <div class="modal-body col text-center">
                                <div class="form-row"><img src="../images/loading.gif" class="w-max-100 mx-auto" /></div>
                            </div>
                            <div class="modal-footer">
                                <img id="SpinnerHide_Btn" src="~/images/BtnOff.PNG" class="btn_Pill" onclick="AreaUp('ModalSpiner');" title="بسته شود" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- صفحه انتظار -->
            <div id="waitbody" class="bg-secondary">
                <div id="waitspiner">
                    <p>لطفا منتظر باشید</p>
                    <div class="form-row"><img src="../images/loading.gif" class="w-max-100 mx-auto111" /></div>
                    <p><label class="btn_Pill btn_Light" onclick="AreaHide('waitbody');">بسته شود</label> </p>
                </div>
            </div>

            <!-- پنجره زوم -->
            <div class="container">
                <input id="Zoom_Btn" type="button" class="d-none" data-toggle="modal" data-target="#ZoomModal" value="" />
                <div class="modal fade" id="ZoomModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <zoom id="ZoomPic" class="w-100"></zoom>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-info font-14" data-dismiss="modal">بسته شود</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>

    @*<script src="~/js/popper.min.js"></script>*@
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        @*<script src="~/lib/popper.js.1.16.1/content/Scripts/popper.js"></script>*@
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/microsoft.jquery.unobtrusive.ajax/3.2.6/Content/Scripts/jquery.unobtrusive-ajax.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
        @*<script src="~/lib/popper.js.1.16.1/content/Scripts/popper.min.js"></script>*@
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/lib/microsoft.jquery.unobtrusive.ajax/3.2.6/Content/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    </environment>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
